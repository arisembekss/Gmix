<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/linrow1"
        android:layout_below="@+id/tit2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_weight="0.5">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frcola"
                android:name="com.dtech.gmix.fragment.FragmentCola"
                tools:layout="@layout/layout_frag_cola" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_weight="0.5">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frcolb"
                android:name="com.dtech.gmix.fragment.FragmentColb"
                tools:layout="@layout/layout_frag_cola" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal"
        android:id="@+id/linrow2"
        android:layout_below="@+id/linrow1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="0.5">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frcolc"
                android:name="com.dtech.gmix.fragment.FragmentCola"
                tools:layout="@layout/layout_frag_cola" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal"
        android:id="@+id/linrow3"
        android:layout_below="@+id/linrow2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="0.5">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frcold"
                android:name="com.dtech.gmix.fragment.FragmentCola"
                tools:layout="@layout/layout_frag_cola" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/tit1"
        android:textColor="@color/icons"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="G-MIX"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/icons"
        android:textStyle="bold"
        android:layout_below="@+id/tit1"
        android:text="CONTROL ELECTRICAL OPERATION"
        android:textSize="20sp"
        android:id="@+id/tit2"/>

    <View
        android:layout_width="325dp"
        android:layout_height="3dp"
        android:layout_below="@+id/tit2"
        android:background="@color/divider"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />
</RelativeLayout>
